{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">


    <main>
        {% if page.header %}
            <header class="page__header mb-3">
                <div class="container">
                    {{ page.header }}
                </div>
            </header>
        {% endif %}


        {% if page.content %}
            <div class="page__content">
              <div class="header-stick">
                {% embed '@radix/navbar/navbar.twig' with {
                  placement: 'sticky-top',
                  container: 'fixed',
                  color: 'light',
                  utility_classes: ['bg-custom'],
                } %}

                  {% block branding %}
                    {% if page.navbar_branding %}
                      {{ page.navbar_branding }}
                    {% endif %}
                  {% endblock %}

                  {% block left %}
                    {% if page.navbar_left %}
                      <div class="mr-auto">
                        {{ page.navbar_left }}
                      </div>
                    {% endif %}
                  {% endblock %}

                  {% block right %}
                    {% if page.navbar_right %}
                      {{ page.navbar_right }}
                    {% endif %}
                  {% endblock %}
                {% endembed %}
              </div>
                {{ page.content }}

            </div>
        {% endif %}
    </main>

    {% if page.footer %}
        <footer class="page__footer">
            <div class="container">
                <div class="d-flex justify-content-md-between align-items-md-center">
                    {{ page.footer }}
                </div>
            </div>
        </footer>
    {% endif %}
</div>
